---
// コンポーネント
import MenuSection from './MenuSection.astro';
import ToggleMenu from '../../ui/ToggleMenu.astro';

// 画像
import { getImage } from 'astro:assets';
import bbqImage01 from '../../../assets/images/food/bbq/img-01.png';
import bbqImage02 from '../../../assets/images/food/bbq/img-02.png';
import bbqImage03 from '../../../assets/images/food/bbq/img-03.png';
import bbqImage04 from '../../../assets/images/food/bbq/img-04.png';

// BBQセクションのプロパティ
const bbqProps = {
  sectionName: 'bbq',
  id: 'bbq',
  title: ['湖畔の風を感じながら', '楽しむアウトドアBBQ'],
  labelText: 'BBQ（夕食・昼食）',
  subtitle: 'BARBECUE',
  description:
    '湖畔の美しい景色を背景に、新鮮な空気と共にアウトドアBBQをお楽しみください。竈門、ピザ窯、大型ファイヤーピットを完備した「KOKKO」施設では、手作りのピザや地元の食材を使用したグリル料理が楽しめます。火を囲みながら、仲間や家族と共に食事をする時間は、忘れがたい思い出となるでしょう。自然の恩恵を全身で感じるこの体験は、心も体もリフレッシュさせてくれます。',
  images: [
    { src: bbqImage01, alt: 'bbqの料理', widths: [330, 518] },
    { src: bbqImage02, alt: 'bbqの料理', widths: [312, 465] },
    { src: bbqImage03, alt: 'bbqの料理', widths: [373, 549] },
    { src: bbqImage04, alt: 'bbqの料理', widths: [311, 465] },
  ],
};

// BBQメニューのデータ
const bbqMenuData = {
  menuTitle: 'Special Menu',
  menuPrice: '5500円（税込）/人',
  menuItems: [
    {
      title: 'お肉',
      description:
        '甲州信玄どりもも肉 ハーブレモン・山梨県産鹿のフランクソーセージ・ベーコン・スパイシー豚ロース',
    },
    {
      title: '海の恵み',
      description: 'レモンペッパーシュリンプ・香味焼きイカ',
    },
    {
      title: '土の恵み',
      description: '旬の野菜5～8種（朝露キャベツ・完熟フルーツトマトなど）',
    },
    {
      title: 'パン',
      description: 'ホットドッグ用パン・バケット',
    },
    {
      title: 'ハーブBOX',
      description: 'ローズマリー・タイム・バジルなど',
    },
    {
      title: 'オリジナルソース',
      description: 'レモン＆オニオンソース・トマトソース',
    },
    {
      title: '富士五湖ポトフ',
      description: '',
    },
    {
      title: 'デザート',
      description: '皮ごとバナナ',
    },
  ],
  menuNotes: [
    '季節や仕入状況などによりメニューが変わります。<br />旬の食材をお楽しみください。',
  ],
};
---

<MenuSection {...bbqProps}>
  <!-- 固有の要素 -->
  <div class="bbq-menu">
    <ToggleMenu {...bbqMenuData} />
  </div>
</MenuSection>

<style lang="scss">
  @import '../../../styles/variables';
  @import '../../../styles/functions';
  @import '../../../styles/mixins';

  :global(.bbq) {
    padding-top: spx(100);
    padding-bottom: spx(130);
    @include tablet-up {
      padding-top: ppx(250 * 1.2);
      padding-bottom: ppx(250 * 1.2);
    }
    @include desktop-up {
      padding-top: ppx(250);
      padding-bottom: ppx(250);
    }
  }
  .bbq-menu {
    margin-top: spx(80);
    width: max-content;
    margin-inline: auto;
    @include tablet-up {
      margin-top: ppx(85 * 1.2);
    }
    @include desktop-up {
      margin-top: ppx(85);
    }
  }
</style>
