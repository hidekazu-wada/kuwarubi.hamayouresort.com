---
// コンポーネント
import MenuSection from './MenuSection.astro';
import ToggleMenu from '../../ui/ToggleMenu.astro';

// 画像
import { getImage } from 'astro:assets';
import breakfastImage01 from '../../../assets/images/food/breakfast/img-01.jpg';
import breakfastImage02 from '../../../assets/images/food/breakfast/img-02.jpg';
import breakfastImage03 from '../../../assets/images/food/breakfast/img-03.jpg';
import breakfastImage04 from '../../../assets/images/food/breakfast/img-04.jpg';

// breakfastセクションのプロパティ
const breakfastProps = {
  sectionName: 'breakfast',
  id: 'breakfast',
  title: ['心とからだを満たす', 'くわるびの朝ごはん'],
  labelText: '朝食',
  subtitle: 'BREAKFAST',
  description:
    '清らかな水と澄んだ空気に包まれた山梨の朝。くわるびの朝食は、炊き立てのご飯や焼き魚、地元野菜のサラダなど、素朴ながらも心満たされる味わいです。特別な日には、かまどで炊き上げたご飯が登場することも。炊きたての香りと湯気に包まれながら、からだに優しい一日の始まりをお楽しみください。',
  images: [
    { src: breakfastImage01, alt: 'breakfastの料理', widths: [330, 518] },
    { src: breakfastImage02, alt: 'breakfastの料理', widths: [312, 465] },
    { src: breakfastImage03, alt: 'breakfastの料理', widths: [373, 549] },
    { src: breakfastImage04, alt: 'breakfastの料理', widths: [311, 465] },
  ],
};
---

<MenuSection {...breakfastProps}>
  <!-- 固有の要素 -->
</MenuSection>

<style lang="scss">
  @import '../../../styles/variables';
  @import '../../../styles/functions';
  @import '../../../styles/mixins';

  :global(.breakfast) {
    padding-top: spx(100);
    padding-bottom: spx(120);
    @include tablet-up {
      padding-top: ppx(250 * 1.2);
      padding-bottom: ppx(250 * 1.2);
    }
    @include desktop-up {
      padding-top: ppx(250);
      padding-bottom: ppx(250);
    }
  }
</style>
