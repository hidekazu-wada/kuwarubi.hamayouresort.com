import SlideImg2 from '../../../assets/images/top/activities/slide-02.png';
import SlideImg3 from '../../../assets/images/top/activities/slide-03.png';
import SlideImg4 from '../../../assets/images/top/activities/slide-04.png';

const TitleTree = await getImage({
  src: TitleImage,
  format: 'webp',
  widths: [170, 210],
});
const ActivitiesSlide1 = await getImage({
  src: SlideImg1,
  format: 'webp',
  widths: [800],
});
const ActivitiesSlide2 = await getImage({
  src: SlideImg2,
  format: 'webp',
  widths: [800],
});
const ActivitiesSlide3 = await getImage({
  src: SlideImg3,
  format: 'webp',
  widths: [800],
