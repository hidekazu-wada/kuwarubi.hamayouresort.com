<style lang="scss">
  // 必要なmixin/functionをインポート
  @import '../../../styles/variables';
  @import '../../../styles/functions';
  @import '../../../styles/mixins';

  /* TOPページ アクティビティーズセクション */
  .activities {
    padding-top: spx(120);
    padding-bottom: spx(130);
    position: relative;
    z-index: 3;
    @include tablet-up {
      padding-top: ppx(100) * 1.2;
      padding-bottom: ppx(255) * 1.2;
    }
    @include desktop-up {
      padding-top: ppx(100);
      padding-bottom: ppx(255);
    }
    &__header {
      position: relative;
      width: max-content;
      padding-left: spx(50);
      @include tablet-up {
        padding-left: ppx(230) * 1.2;
      }
      @include desktop-up {
        padding-left: ppx(230);
      }
    }

    &__title {
      color: var(--blue_4, #59a1c0);
      font-size: spx(34);
      font-weight: 900;
      line-height: spx(34);
      letter-spacing: spx(2.38);
      position: relative;
      width: max-content;
      @include tablet-up {
        font-size: ppx(34) * 1.2;
        line-height: ppx(34) * 1.2;
        letter-spacing: ppx(2.38) * 1.2;
        margin-left: ppx(11) * 1.2;
      }
      @include desktop-up {
        font-size: ppx(34);
        line-height: ppx(34);
        letter-spacing: ppx(2.38);
        margin-left: ppx(11);
      }
      // タイトル下線部
      &::after {
        content: '';
        position: absolute;
        bottom: spx(-20);
        left: 50%;
        transform: translateX(-50%);
        width: 100%;
        height: spx(5);
        background: linear-gradient(
          to right,
          var(--green_2, #adc400) 0%,
          /* 左：緑色 */ var(--green_2, #adc400) 48.6%,
          /* 87/179 ≈ 48.6% まで緑 */ transparent 48.6%,
          /* 透明開始 */ transparent 51.4%,
          /* 透明終了 (48.6% + 5/179*100% ≈ 51.4%) */ var(--blue_4, #59a1c0)
            51.4%,
          /* 青色開始 */ var(--blue_4, #59a1c0) 100% /* 右端まで青 */
        );
        @include tablet-up {
          bottom: ppx(-20) * 1.2;
          height: ppx(5) * 1.2;
        }
        @include desktop-up {
          bottom: ppx(-20);
          height: ppx(5);
        }
      }
    }

    &__subtitle {
      color: var(--blue_6, #054965);
      font-size: spx(50);
      line-height: 150%;
      margin-top: spx(40);

      @include tablet-up {
        font-size: ppx(68) * 1.2;
        line-height: 150%;
        margin-top: ppx(50) * 1.2;
      }
      @include desktop-up {
        font-size: ppx(68);
        line-height: 150%;
        margin-top: ppx(50);
      }
    }

    &__subtitle-line {
      display: block;
      @include tablet-up {
        display: inline-block;
      }
      @include desktop-up {
      }
      &:nth-of-type(1) {
        display: block;
      }
    }

    &__tree {
      position: absolute;
      top: spx(161);
      right: spx(-140);
      width: spx(170);
      height: spx(234);
      @include tablet-up {
        width: ppx(210) * 1.2;
        height: ppx(288) * 1.2;
        right: ppx(-222) * 1.2;
        top: ppx(21) * 1.2;
      }
      @include desktop-up {
        width: ppx(210);
        height: ppx(288);
        right: ppx(-222);
        top: ppx(21);
      }
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }
  }

  /* TOPページ Activities Swiper専用スタイル */
  .top-activities {
    &__swiper {
      margin-top: spx(117);
      overflow: hidden;
      position: relative;

      @include tablet-up {
        margin-top: ppx(130) * 1.2;
        //margin-left: ppx(360 * 1.2);
      }
      @include desktop-up {
        margin-top: ppx(130);
        //margin-left: ppx(360);
      }
      .swiper-wrapper {
      }
      .swiper-slide {
        // 画像コンテナのサイズ指定
        width: spx(500);
        height: spx(600);

        @include tablet-up {
          width: ppx(500) * 1.2;
          height: ppx(600) * 1.2;
        }
        @include desktop-up {
          width: ppx(500);
          height: ppx(600);
        }
      }
    }

    &__item {
      width: 100%;
      height: 100%;
    }

    &__link {
      display: block;
      width: 100%;
      height: 100%;
      border-radius: spx(30);
      overflow: hidden;
      position: relative;
      transition: all 0.3s ease;
      @include tablet-up {
        border-radius: ppx(30) * 1.2;
      }
      @include desktop-up {
        border-radius: ppx(30);
      }

      // ホバーエフェクト
      @include hover {
        &:hover {
          .top-activities__image::after {
            opacity: 1;
          }

          .top-activities__meta {
            background-color: var(--green_2, #adc400);
          }

          .top-activities__name {
            color: var(--white, #fff);
          }

          .top-activities__arrow path {
            stroke: var(--white, #fff);
          }
        }
      }
    }

    &__image-wrapper {
      width: 100%;
      height: 100%;
    }

    &__image {
      display: block;
      width: 100%;
      height: 100%;
      position: relative;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover; // 画像の縦横比維持
      }

      // 半透明白オーバーレイ
      &::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 255, 255, 0.2);
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
      }
    }

    &__title {
      position: absolute;
      top: spx(37);
      left: spx(43);
      color: var(--white, #fff);
      font-size: spx(34);
      line-height: 122%;
      writing-mode: vertical-rl;
      @include tablet-up {
        top: ppx(37) * 1.2;
        left: ppx(43) * 1.2;
        font-size: ppx(34) * 1.2;
      }
      @include desktop-up {
        top: ppx(37);
        left: ppx(43);
        font-size: ppx(34);
      }
      &.color-blue {
        color: var(--blue_6, #054965);
      }
    }

    &__meta {
      position: absolute;
      bottom: spx(30);
      left: 50%;
      transform: translateX(-50%);
      background-color: rgba($color: #fff, $alpha: 0.9);
      border-radius: spx(130);
      width: spx(390);
      height: spx(66);
      display: grid;
      place-items: center;
      transition: background-color 0.3s ease;
      @include tablet-up {
        bottom: ppx(30) * 1.2;
        border-radius: ppx(130) * 1.2;
        width: ppx(390) * 1.2;
        height: ppx(66) * 1.2;
      }
      @include desktop-up {
        bottom: ppx(30);
        border-radius: ppx(130);
        width: ppx(390);
        height: ppx(66);
      }
    }

    &__name {
      color: var(--blue_6, #054965);
      text-align: center;
      font-size: spx(32);
      line-height: 100%;
      letter-spacing: spx(-1.6);
      transition: color 0.3s ease;
      @include tablet-up {
        font-size: ppx(32) * 1.2;
        letter-spacing: ppx(-1.6) * 1.2;
      }
      @include desktop-up {
        font-size: ppx(32);
        letter-spacing: ppx(-1.6);
      }
    }

    &__arrow {
      display: block;
      position: absolute;
