      padding-top: spx(20);
      padding-left: spx(50);
      @include tablet-up {
        padding-top: 0;
        padding-left: 0;
        display: grid;
        place-items: center;
      }
      @include desktop-up {
      }
    }

    &__card-title {
      display: flex;
      flex-flow: column;
      gap: spx(5);
      @include tablet-up {
        writing-mode: vertical-rl;
        gap: ppx(26) * 1.2;
      }
      @include desktop-up {
