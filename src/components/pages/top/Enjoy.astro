        }
      }
    }

    &__card-content {
      grid-area: content;
    }

    &__card-media {
      position: relative;
      width: 100%;
      height: 100%;
    }

    &__card-image {
      position: relative;
      width: 100%;
      height: 100%;

      // 半透明白オーバーレイ
      &::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
