      }
      @include desktop-up {
        font-size: ppx(130);
        top: ppx(115);
        right: ppx(100);
      }
    }

    &__card-button {
      display: none;
      @include tablet-up {
        display: block;
        position: absolute;
        bottom: ppx(30) * 1.2;
        right: ppx(50) * 1.2;
        transition: transform 0.3s ease;
      }
      @include desktop-up {
        bottom: ppx(30);
        right: ppx(50);
      }
    }

    &__card-arrow {
      @include tablet-up {
        display: block;
