      width: 100%;
      display: flex;
      gap: 6vw;
      margin-top: ppx(169 * 1.2);
      padding-bottom: ppx(112 * 1.2);
    }
    @include desktop-up {
      gap: ppx(139);
      margin-top: ppx(169);
      padding-bottom: ppx(112);
    }

    &__image-block {
      @include tablet-up {
      }
      @include desktop-up {
      }

      &--left {
        @include tablet-up {
