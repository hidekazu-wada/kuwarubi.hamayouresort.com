        }
      }
      &--right {
        margin-top: spx(90);
        @include tablet-up {
          margin-top: 0;
          position: absolute;
          top: ppx(717 * 1.2);
          right: 0;
        }
        @include desktop-up {
          top: ppx(717);
          right: 0;
        }
      }
    }

    &__picture {
      display: block;
      @include tablet-up {
      }
      @include desktop-up {
