  @import '../../../styles/variables';
  @import '../../../styles/functions';
  @import '../../../styles/mixins';

  .equipment {
    padding-top: spx(90);
    @include tablet-up {
      padding-top: ppx(220 * 1.2);
    }
    @include desktop-up {
      padding-top: ppx(220);
    }
    &__header {
