      &__item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: spx(6);
        @include tablet-up {
          display: grid;
          grid-template-columns: max-content auto 17vw;
          align-items: center;
          gap: unset;
        }
        @include desktop-up {
          grid-template-columns: max-content auto ppx(360);
        }
      }

      // 出発地
      &__from {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: spx(1);
        @include tablet-up {
          gap: 0;
        }
        @include desktop-up {
        }
      }

      // 都市名
      &__city {
        color: var(--blue_6, #054965);
        font-family: 'Zen Kaku Gothic New';
        font-size: spx(35);
        font-style: normal;
        font-weight: 400;
        line-height: 150%;
        @include tablet-up {
          font-size: ppx(35 * 1.2);
          width: max-content;
        }
        @include desktop-up {
          font-size: ppx(35);
        }
      }

      // 経由地
      &__via {
        color: var(--blue_4, #59a1c0);
        font-family: 'Zen Kaku Gothic New';
        font-size: spx(26);
        font-style: normal;
        font-weight: 400;
        line-height: 130%;
        @include tablet-up {
          font-size: ppx(26 * 1.2);
          position: absolute;
          left: 0;
          bottom: ppx(-35 * 1.2);
          width: max-content;
        }
        @include desktop-up {
          font-size: ppx(26);
          bottom: ppx(-35);
        }
      }

      // ライン
      &__line {
        display: block;
        width: 1px;
        height: spx(41);
        background: var(--blue_4, #59a1c0);
        @include tablet-up {
          height: 100%;
          width: 100%;
          background: none;
          position: relative;
        }
        @include desktop-up {
        }
        &::after {
          @include tablet-up {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 98%;
            height: 1px;
