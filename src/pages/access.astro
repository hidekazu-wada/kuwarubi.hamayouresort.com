---
// ============================================================
// 汎用ページテンプレート
// 使い方：このファイルをコピーして、ファイル名を変更して使用
// 例：cp src/pages/_template.astro src/pages/about.astro
// ============================================================

// 必須インポート
import BaseLayout from '../layouts/BaseLayout.astro';
import LowerPageHeader from '../components/ui/LowerPageHeader.astro';
import Breadcrumb from '../components/ui/Breadcrumb.astro';

// 画像
import JapanMapSpImage from '../assets/images/access/hero/sp.svg';
import JapanMapTabletUpImage from '../assets/images/access/hero/tablet-up.svg';

// ============================================================
// TODO: 以下の項目を必ず変更してください
// ============================================================

// ページメタ情報（必ず変更）
const pageTitle = 'アクセス | 光風閣くわるび';
const pageDescription = 'ページの説明文をここに記述します。';

// ページ固有のクラス名（accessを適切な名前に変更）
const pageClass = 'main-content--access';
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  pageClass={pageClass}
>
  <!-- ============================================================ -->
  <!-- TODO: titleEn, titleJa, Breadcrumbのテキストを変更 -->
  <!-- ============================================================ -->

  <!-- メインコンテンツ -->
  <section class="access-hero">
    <!-- ページヘッダー -->
    <div class="page-header-container">
      <LowerPageHeader titleEn="ACCESS" titleJa="アクセス" />
    </div>
    <div class="access-hero__content">
      <h1 class="access-hero__heading">
        首都圏からすぐ<br />
        息をのむ自然の中へ
      </h1>
      <p class="access-hero__description">
        首都圏からわずかな距離で、息をのむような自然に囲まれた当ホテルへお越しください。緑豊かな山々、透き通るような湖、清々しい空気が、日常からの完全な逃避を提供します。手つかずの自然の中で過ごす時間は、都会の喧騒から解放され、心身ともにリフレッシュする貴重な瞬間です。自然と直接触れ合うことで、新たな発見と感動があなたを待っています。この美しい場所で、忘れられない思い出を作りましょう。
      </p>
      <address class="access-hero__address">
        <div class="access-hero__address-block">
          <p class="access-hero__postal-code">〒401-0332</p>
          <p class="access-hero__address-text">
            山梨県南都留郡富士河口湖町西湖９９７
          </p>
        </div>
        <p class="access-hero__phone">TEL 0555-82-2922</p>
      </address>
    </div>
    <figure class="access-hero__map">
      <picture class="access-hero__map-image">
        <!-- デスクトップ（1024px以上）→ 最高解像度版 -->
        <source
          media="(min-width: 1024px)"
          srcset={JapanMapTabletUpImage.src.toString()}
        />
        <!-- タブレット（744px以上）→ 中解像度版 -->
        <source
          media="(min-width: 744px)"
          srcset={JapanMapTabletUpImage.src.toString()}
        />
        <!-- スマホ（744px未満）→ 最小解像度版 -->
        <img
          src={JapanMapSpImage.src}
          alt="東京・名古屋・大阪からのアクセスマップ"
          class="access-hero__map-img"
        />
      </picture>
    </figure>
  </section>

  <section class="access-route">
    <div class="access-route__container">
      <figure class="access-route__map">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d51968.108919831255!2d138.64486859213216!3d35.5041099!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x601be1abf278b1dd%3A0x8bbcffa1146e4d31!2sHamayou%20Resort!5e0!3m2!1sja!2sjp!4v1758422955524!5m2!1sja!2sjp"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="access-route__iframe"></iframe>
      </figure>
      <div class="access-route__info">
        <h2 class="access-route__title">お車でお越しの場合</h2>
        <ul class="access-route__list">
          <li class="access-route__item">
            <div class="access-route__from">
              <p class="access-route__city">東京（新宿）から</p>
              <p class="access-route__via">中央自動車道経由</p>
            </div>
            <span class="access-route__line"></span>
            <div class="access-route__to">
              <p class="access-route__distance">１００km</p>
              <p class="access-route__time">約２時間</p>
            </div>
          </li>
          <li class="access-route__item">
            <div class="access-route__from">
              <p class="access-route__city">神奈川（横浜）から</p>
              <p class="access-route__via">東名高速道路経由</p>
            </div>
            <span class="access-route__line"></span>
            <div class="access-route__to">
              <p class="access-route__distance">１２０km</p>
              <p class="access-route__time">約２時間</p>
            </div>
          </li>
          <li class="access-route__item">
            <div class="access-route__from">
              <p class="access-route__city">愛知（名古屋）から</p>
              <p class="access-route__via">東名高速道路経由</p>
            </div>
            <span class="access-route__line"></span>
            <div class="access-route__to">
              <p class="access-route__distance">２６０km</p>
              <p class="access-route__time">約３時間３０分</p>
            </div>
          </li>
          <li class="access-route__item">
            <div class="access-route__from">
              <p class="access-route__city">大阪（大阪）から</p>
              <p class="access-route__via">名神高速道路・東名高速道路経由</p>
            </div>
            <span class="access-route__line"></span>
            <div class="access-route__to">
              <p class="access-route__distance">４１０km</p>
              <p class="access-route__time">約５時間</p>
            </div>
          </li>
        </ul>
      </div>
    </div>
    <footer class="access-route__footer">
      <div class="access-route__footer-container">
        <p class="access-route__footer-text">
          無料駐車場を完備しております。冬季はスタッドレスタイヤを推奨します。ご到着がスムーズになるよう、事前にルート情報をご確認ください。
        </p>
        <nav class="access-route__links">
          <a href="" class="access-route__link">
            <span class="access-route__link-text">ルート情報</span>
            <svg class="access-route__link-icon"></svg>
          </a>
          <a href="" class="access-route__link">
            <span class="access-route__link-text">駐車場情報</span>
            <svg class="access-route__link-icon"></svg>
          </a>
        </nav>
      </div>
    </footer>
  </section>

  <!-- パンくずリスト -->
  <div class="breadcrumb-wrapper">
    <Breadcrumb items={[{ text: 'TOP', href: '/' }, { text: 'アクセス' }]} />
  </div>
</BaseLayout>

<style lang="scss">
