---
// ============================================================
// 汎用ページテンプレート
// 使い方：このファイルをコピーして、ファイル名を変更して使用
// 例：cp src/pages/_template.astro src/pages/about.astro
// ============================================================

// 必須インポート
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/ui/Breadcrumb.astro';

// コンポーネント
import Hero from '../components/pages/access/Hero.astro';
import Route from '../components/pages/access/Route.astro';

// 画像
import VisitSp1 from '../assets/images/access/visit/sp-01.svg';
import VisitSp2 from '../assets/images/access/visit/sp-02.svg';
import VisitTabletUp1 from '../assets/images/access/visit/tablet-up-01.svg';
import VisitTabletUp2 from '../assets/images/access/visit/tablet-up-02.svg';

// ============================================================
// TODO: 以下の項目を必ず変更してください
// ============================================================

// ページメタ情報（必ず変更）
const pageTitle = 'アクセス | 光風閣くわるび';
const pageDescription = 'ページの説明文をここに記述します。';

// ページ固有のクラス名（accessを適切な名前に変更）
const pageClass = 'main-content--access';
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  pageClass={pageClass}
>
  <!-- ============================================================ -->
  <!-- TODO: titleEn, titleJa, Breadcrumbのテキストを変更 -->
  <!-- ============================================================ -->

  <Hero />
  <Route />
  <section>
    <div>
      <div class="">公共交通機関で<br class="only-sp" />お越しの場合</div>
      <div>
        <div>
          <picture class="クラス名 モディファイア名">
            <!-- デスクトップ（1024px以上）→ 最高解像度版 -->
            <source
              media="(min-width: 1024px)"
              srcset={VisitTabletUp1.src.toString()}
            />
            <!-- タブレット（744px以上）→ 中解像度版 -->
            <source
              media="(min-width: 744px)"
              srcset={VisitTabletUp1.src.toString()}
            />
            <!-- スマホ（744px未満）→ 最小解像度版 -->
            <img
              src={VisitSp1.src}
              alt="画像の内容を説明するテキスト"
              class="追加のクラス名（必要に応じて）"
            />
          </picture>
        </div>
        <div>
          <picture class="クラス名 モディファイア名">
            <!-- デスクトップ（1024px以上）→ 最高解像度版 -->
            <source
              media="(min-width: 1024px)"
              srcset={VisitTabletUp2.src.toString()}
            />
            <!-- タブレット（744px以上）→ 中解像度版 -->
            <source
              media="(min-width: 744px)"
              srcset={VisitTabletUp2.src.toString()}
            />
            <!-- スマホ（744px未満）→ 最小解像度版 -->
            <img
              src={VisitSp2.src}
              alt="画像の内容を説明するテキスト"
              class="追加のクラス名（必要に応じて）"
            />
          </picture>
        </div>
      </div>
    </div>
    <div class="">
      <div class="">無料送迎バスについて</div>
      <div>
        <div class="">
          河口湖駅から無料の送迎バス（シャトルバス）を運行しております。ホテルまでは約１５分。
        </div>
        <div class="">
          事前にご予約が必要となります。ご予約がない場合は運行をしていない場合もございます。
        </div>
        <div class="">
          １０名様以上の場合は規定時間外でも承っております。お気軽にお問合せください。
        </div>
      </div>
      <div class="">
        <div>
          <div class="">時刻表</div>
          <span></span>
        </div>
        <div>
          <div>
            <div class="">ホテル発　　⇒　河口湖駅行</div>
            <div class="">（出発時間 10：00）</div>
          </div>
          <div>
            <div class="">河口湖駅発　⇒　ホテル行①</div>
            <div class="">（出発時間 15：00）</div>
          </div>
          <div>
            <div class="">河口湖駅発　⇒　ホテル行②</div>
            <div class="">（出発時間 17：00）</div>
          </div>
        </div>
      </div>
      <div class="">
        <div class="">
          シャトルバスは河口湖駅１０番乗り場からの発車となります。
        </div>
        <div class="">上記以外のお時間に関しましてはご相談ください。</div>
        <div class="">
          いずみの湯の日帰り利用、キャンプ場利用の場合の送迎はおこなっておりません。
        </div>
      </div>
    </div>
    <div class="">
      <div class="">高速バスのご予約はこちら</div>
      <div>
        <div>
          <div class="">新宿 〜 河口湖駅</div>
          <svg> </svg>
        </div>
        <div>
          <div class="">三島駅 〜 河口湖駅</div>
          <svg> </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- パンくずリスト -->
  <div class="breadcrumb-wrapper">
    <Breadcrumb items={[{ text: 'TOP', href: '/' }, { text: 'アクセス' }]} />
  </div>
</BaseLayout>

<style lang="scss">
  @import '../styles/variables';
  @import '../styles/functions';
  @import '../styles/mixins';

  // ============================================================
  // TODO: accessを適切な名前に変更してスタイルを記述
  // ============================================================

  :global(.main-content--access) {
    display: block;
    background: var(--blue_2, #e7f3f9);
  }
</style>
