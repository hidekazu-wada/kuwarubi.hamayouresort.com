      // コンテナ
      &__container {
        display: grid;
        grid-template:
          'map'
          'info';
        gap: spx(90);

        @include tablet-up {
          grid-template-areas: 'info map';
          gap: ppx(119 * 1.2);
          width: max-content;
          margin-left: auto;
          margin-right: 0;
        }
        @include desktop-up {
          gap: ppx(119);
        }
      }

      // マップコンテナ
      &__map {
        grid-area: map;
      }

      // iframe
      &__iframe {
        display: block;
        width: 100%;
        height: spx(449);
