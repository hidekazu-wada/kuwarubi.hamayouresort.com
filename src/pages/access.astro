---
// ============================================================
// 汎用ページテンプレート
// 使い方：このファイルをコピーして、ファイル名を変更して使用
// 例：cp src/pages/_template.astro src/pages/about.astro
// ============================================================

// 必須インポート
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/ui/Breadcrumb.astro';

// コンポーネント
import Hero from '../components/pages/access/Hero.astro';
import Route from '../components/pages/access/Route.astro';
import Transport from '../components/pages/access/Transport.astro';

// 画像

// ============================================================
// TODO: 以下の項目を必ず変更してください
// ============================================================

// ページメタ情報（必ず変更）
const pageTitle = 'アクセス | 光風閣くわるび';
const pageDescription = 'ページの説明文をここに記述します。';

// ページ固有のクラス名（accessを適切な名前に変更）
const pageClass = 'main-content--access';
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  pageClass={pageClass}
>
  <!-- ============================================================ -->
  <!-- TODO: titleEn, titleJa, Breadcrumbのテキストを変更 -->
  <!-- ============================================================ -->

  <Hero />
  <Route />
  <Transport />
  <section>
    <div class="">団体バスでお越しの場合</div>
    <div class="">
      当旅館敷地内に最大10台の大型バスが収容できる無料駐車場がございます。<br />
      ご利用の際には、ご利用日の１ヶ月前までに当館にお申込みください。
    </div>
    <div class="map">駐車場案内図</div>
  </section>

  <!-- パンくずリスト -->
  <div class="breadcrumb-wrapper">
    <Breadcrumb items={[{ text: 'TOP', href: '/' }, { text: 'アクセス' }]} />
  </div>
</BaseLayout>

<style lang="scss">
  @import '../styles/variables';
  @import '../styles/functions';
  @import '../styles/mixins';

  // ============================================================
  // TODO: accessを適切な名前に変更してスタイルを記述
  // ============================================================

  :global(.main-content--access) {
    display: block;
    background: var(--blue_2, #e7f3f9);
  }
</style>
