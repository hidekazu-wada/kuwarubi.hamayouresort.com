<script>
  // Hide header elements when reaching footer
  const pageHeaderContainer = document.querySelector(
    '.page-header-container'
  ) as HTMLElement | null;
  const contactFormHeader = document.querySelector(
    '.contact-form__header'
  ) as HTMLElement | null;
  const footer = document.querySelector('.footer') as HTMLElement | null;

  function checkFooterPosition() {
    if (!footer) return;

    const footerRect = footer.getBoundingClientRect();
    const footerTop = footerRect.top;
    const triggerPoint = footerTop - 300; // フッターから300px上を切り替えポイントに

    // Check page header container
    if (pageHeaderContainer) {
      const headerRect = pageHeaderContainer.getBoundingClientRect();
      const headerBottom = headerRect.bottom;

      if (headerBottom > triggerPoint) {
        pageHeaderContainer.classList.add('hide-at-footer');
      } else {
        pageHeaderContainer.classList.remove('hide-at-footer');
      }
    }

    // Check contact form header
    if (contactFormHeader) {
      const formHeaderRect = contactFormHeader.getBoundingClientRect();
      const formHeaderBottom = formHeaderRect.bottom;

      if (formHeaderBottom > triggerPoint) {
        contactFormHeader.classList.add('hide-at-footer');
      } else {
        contactFormHeader.classList.remove('hide-at-footer');
      }
    }
  }

  // Check on scroll and resize
  let scrollTimeout: number | null = null;

  function handleScroll() {
    if (scrollTimeout) {
      clearTimeout(scrollTimeout);
    }

    scrollTimeout = window.setTimeout(() => {
      checkFooterPosition();
    }, 10);
  }

  window.addEventListener('scroll', handleScroll);
  window.addEventListener('resize', handleScroll);

  // Initial check
  checkFooterPosition();

  // Privacy agreement checkbox control
  const privacyCheckbox = document.querySelector(
    '.contact-form__checkbox'
  ) as HTMLInputElement | null;
  const submitButton = document.querySelector(
    '.contact-form__submit'
  ) as HTMLButtonElement | null;

  function updateSubmitButton() {
    if (!privacyCheckbox || !submitButton) return;

    if (privacyCheckbox.checked) {
      submitButton.disabled = false;
      submitButton.style.opacity = '1';
    } else {
      submitButton.disabled = true;
      submitButton.style.opacity = '0.5';
    }
  }

  function resetCheckbox() {
    if (privacyCheckbox) {
      privacyCheckbox.checked = false;
      updateSubmitButton();
    }
  }

  // Reset on initial load
  resetCheckbox();

  // Reset when page is shown (including back button navigation)
  window.addEventListener('pageshow', () => {
    // This fires when page is loaded from cache (back button)
    resetCheckbox();
  });

  // Make entire label clickable
  const checkboxLabel = document.querySelector(
    '.contact-form__checkbox-label'
  ) as HTMLLabelElement | null;
  if (checkboxLabel) {
    checkboxLabel.style.cursor = 'pointer';
  }

  // Listen for checkbox changes
  if (privacyCheckbox) {
    privacyCheckbox.addEventListener('change', updateSubmitButton);
  }

  // Handle form submission
  const form = document.querySelector(
    '.contact-form__form'
  ) as HTMLFormElement | null;
  if (form) {
    form.addEventListener('submit', (e) => {
      // Check required fields
      const requiredFields = form.querySelectorAll('[required]');
      let hasEmptyField = false;

      requiredFields.forEach((field) => {
        const input = field as
          | HTMLInputElement
          | HTMLSelectElement
          | HTMLTextAreaElement;
        if (!input.value || input.value.trim() === '') {
          hasEmptyField = true;
        }
      });

      if (hasEmptyField) {
        e.preventDefault();
        alert('必須項目をすべて入力してください。');
        return;
      }

      // Check email match
      const emailInput = form.querySelector(
        'input[name="email"]'
      ) as HTMLInputElement | null;
      const emailConfirmInput = form.querySelector(
        'input[name="email_confirm"]'
      ) as HTMLInputElement | null;

      if (emailInput && emailConfirmInput) {
        if (emailInput.value !== emailConfirmInput.value) {
          e.preventDefault();
          alert('メールアドレスが一致しません。もう一度確認してください。');
          emailConfirmInput.focus();
          return;
        }
      }

      // Check privacy agreement
      if (!privacyCheckbox || !privacyCheckbox.checked) {
        e.preventDefault();
        alert('個人情報の取り扱いに同意してください。');
        return;
      }
    });
  }
</script>
