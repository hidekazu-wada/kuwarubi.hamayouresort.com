---
// ============================================================
// 汎用ページテンプレート
// 使い方：このファイルをコピーして、ファイル名を変更して使用
// 例：cp src/pages/_template.astro src/pages/about.astro
// ============================================================

// 必須インポート
import BaseLayout from '../layouts/BaseLayout.astro';
import LowerPageHeader from '../components/ui/LowerPageHeader.astro';
import Breadcrumb from '../components/ui/Breadcrumb.astro';

// コンポーネント
import RoomHeader from '../components/pages/facility/RoomHeader.astro';
import RoomGallery from '../components/pages/facility/RoomGallery.astro';
import RoomSpec from '../components/pages/facility/RoomSpec.astro';
import RoomAmenities from '../components/pages/facility/RoomAmenities.astro';
import PublicBath from '../components/pages/facility/PublicBath.astro';
import HodohodoForest from '../components/pages/facility/HodohodoForest.astro';
import Kokko from '../components/pages/facility/Kokko.astro';
import Equipment from '../components/pages/facility/Equipment.astro';

// ============================================================
// TODO: 以下の項目を必ず変更してください
// ============================================================

// ページ固有のクラス名（page-nameを適切な名前に変更）
const pageClass = 'main-content--facility';
---

<BaseLayout pageTitle="お部屋・施設" pageClass={pageClass}>
  <!-- ============================================================ -->
  <!-- TODO: titleEn, titleJa, Breadcrumbのテキストを変更 -->
  <!-- ============================================================ -->

  <!-- ページヘッダー -->
  <div class="page-header-container">
    <LowerPageHeader titleEn="ROOM" titleJa="お部屋" />
  </div>

  <!-- メインコンテンツ -->
  <main class="room">
    <RoomHeader />
    <RoomGallery />
    <RoomSpec />
    <RoomAmenities />
    <PublicBath />
    <HodohodoForest />
    <Kokko />
    <Equipment />
  </main>
  <!-- パンくずリスト -->
  <div class="breadcrumb-wrapper">
    <Breadcrumb
      items={[{ text: 'TOP', href: '/' }, { text: 'お部屋・施設' }]}
    />
  </div>
</BaseLayout>

<style lang="scss">
  @import '../styles/variables';
  @import '../styles/functions';
  @import '../styles/mixins';

  :global(.main-content--facility) {
    background: #f1f8fb;
    position: relative;
    padding-top: spx(110);
    @include tablet-up {
      padding-top: ppx(594 * 1.2);
    }
    @include desktop-up {
      padding-top: ppx(594);
    }
  }

  .page-header-container {
    @include tablet-up {
      position: absolute;
      top: ppx(490 * 1.2);
      left: ppx(233 * 1.2);
    }
    @include desktop-up {
      top: ppx(490);
      left: ppx(233);
    }
  }

  .breadcrumb-wrapper {
    margin-top: spx(120);
    margin-bottom: spx(40);
    @include tablet-up {
      margin-top: ppx(262 * 1.2);
      margin-bottom: ppx(70 * 1.2);
    }
    @include desktop-up {
      margin-top: ppx(262);
      margin-bottom: ppx(70);
    }
  }
</style>
