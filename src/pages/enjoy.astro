      modules: [Thumbs, FreeMode],
      spaceBetween: 10,
      slidesPerView: 'auto', // 全て表示
      freeMode: true,
      watchSlidesProgress: true,
      breakpoints: {
        1024: {
          slidesPerView: 1,
        },
      },
    });

    // メインSwiper
    new Swiper('.enjoy-day1__swiper-main', {
      modules: [Thumbs],
      spaceBetween: 10,
      slidesPerView: 1, // 1枚ずつ表示
      thumbs: {
        swiper: thumbsSwiper, // サムネイルと連動
