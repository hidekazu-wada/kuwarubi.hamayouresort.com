                </a>
                <div class="popular-activities__card-info">
                  <div class="popular-activities__pricing">
                    <div class="popular-activities__badges">
                      {popularActivity.badges.map((badge) => (
                        <div class="popular-activities__badge-group">
                          <span
                            class={`popular-activities__badge popular-activities__badge--${badge.type}`}
                          >
                            {badge.text.split('\n').map((line, index) => (
                              <>
                                {line}
                                {index < badge.text.split('\n').length - 1 && (
                                  <br />
                                )}
                              </>
                            ))}
                          </span>
                        </div>
                      ))}
                    </div>
                    <div class="popular-activities__price">
                      ¥{popularActivity.price.adult.toLocaleString()}〜
                    </div>
                  </div>
                  <dl class="popular-activities__details">
                    {durationData && (
                      <div class="popular-activities__detail-item">
                        <dt class="popular-activities__detail-term">
                          所要時間：
                        </dt>
                        <dd class="popular-activities__detail-desc">
                          {durationData.description}
                        </dd>
                      </div>
                    )}
                    {ageData && (
                      <div class="popular-activities__detail-item">
                        <dt class="popular-activities__detail-term">
                          対象年齢：
                        </dt>
                        <dd class="popular-activities__detail-desc">
                          {ageData.description}
                        </dd>
                      </div>
                    )}
                    {seasonData && (
                      <div class="popular-activities__detail-item">
                        <dt class="popular-activities__detail-term">
                          実施時期：
                        </dt>
                        <dd class="popular-activities__detail-desc">
                          {seasonData.description}
                        </dd>
                      </div>
                    )}
                  </dl>
                </div>
              </div>
            );
          })
        }
      </div>
    </div>

    <div
      class="popular-activities__pagination swiper-pagination activities-detail-popular__swiper-pagination"
    >
    </div>

    <a href="/activities" class="popular-activities__more">
      <span class="popular-activities__more-text">more</span>
      <svg
        class="popular-activities__more-icon"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 22 23"
        fill="none"
      >
        <path
          d="M1.88672 21.4004L20.1146 11.4004L1.88672 1.40039"
          stroke="white"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </a>
  </section>
  <div class="breadcrumb-wrapper">
    <Breadcrumb
      items={[
        { text: 'TOP', href: '/' },
        { text: 'アクティビティ', href: '/activities' },
        { text: activity.title },
      ]}
    />
  </div>
</BaseLayout>

<script>
  // Swiperのインポート
  import Swiper from 'swiper';
  import { Pagination, Autoplay } from 'swiper/modules';

  // DOMロード後に実行
  document.addEventListener('DOMContentLoaded', () => {
    // Swiper初期化（activities-detail専用・完全独立）
    new Swiper('.activities-detail__swiper', {
      modules: [Pagination, Autoplay],
      slidesPerView: 1,
      spaceBetween: 20,
      autoplay: {
        delay: 4000,
        disableOnInteraction: false,
      },
      pagination: {
        el: '.activity-detail__pager',
        clickable: true,
      },
    });

    // 人気のアクティビティSwiper初期化（activities-detail-popular専用・完全独立）
    new Swiper('.activities-detail-popular__swiper', {
      modules: [Pagination, Autoplay],
      slidesPerView: 1.35,
      centeredSlides: true, // スマホでセンターモード有効
      autoplay: {
        delay: 5000,
        disableOnInteraction: false,
      },
      pagination: {
        el: '.activities-detail-popular__swiper-pagination',
        clickable: true,
      },
      // レスポンシブ設定（variables.scssのブレイクポイントに対応）
      breakpoints: {
        // タブレット以上（744px以上）
        744: {
          slidesPerView: 3,
          centeredSlides: false, // タブレット以上ではセンターモード無効
        },
        // デスクトップ以上（1024px以上）
        1024: {
          slidesPerView: 3,
          centeredSlides: false, // デスクトップでもセンターモード無効
        },
      },
    });

    // ページ固有のJavaScriptコードのみここに残す
    // メニューとモーダルの制御はBaseLayoutで処理されるため削除
  });
</script>

