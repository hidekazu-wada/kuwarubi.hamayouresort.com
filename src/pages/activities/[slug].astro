    </figure>
    <article class="point__content">
      <header class="point__header">
        <div class="point__header-wrapper">
          <p class="point__label">POINT</p>
          <hgroup class="point__title-group">
            <h3 class="point__title">
              {
                activity.point.titleLines.map((line) => (
                  <span class="point__title-line">{line}</span>
                ))
              }
            </h3>
          </hgroup>
        </div>
      </header>
      <div class="point__description">
        {activity.point.description}
      </div>
    </article>
  </section>
  <section class="about" id="overview">
    <header class="about__header">
      <h4 class="about__title">About</h4>
      <p class="about__subtitle">概要</p>
    </header>
    <div class="about__content">
      <dl class="about__list">
        {
          activity.about.map((item) => (
            <div class="about__item">
              <dt class="about__term">{item.term}</dt>
              <dd class="about__description">
                {item.description}
                {item.note && <small class="about__note">＊{item.note}</small>}
              </dd>
            </div>
          ))
        }
      </dl>
    </div>
  </section>

  <section class="flow" id="program">
    <header class="flow__header">
      <h4 class="flow__title">Flow</h4>
      <p class="flow__subtitle">プログラムの流れ</p>
    </header>
    <div class="flow__content">
      <ol class="flow__list">
        {
          activity.flow.map((step) => (
            <li class="flow__item">
              <article class="flow__step">
                <header class="flow__step-header">
                  <span class="flow__step-number">{step.stepNumber}</span>
                  <h5 class="flow__step-title">{step.title}</h5>
                </header>
