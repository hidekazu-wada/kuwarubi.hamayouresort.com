---
// BaseLayoutをインポート
import BaseLayout from '../../layouts/BaseLayout.astro';
// Swiper CSS
import 'swiper/css';
import 'swiper/css/pagination';
import Breadcrumb from '../../components/ui/Breadcrumb.astro';
import { activities, type Activity } from '../../data/activities';

// 画像
import { getImage } from 'astro:assets';

// 動的ルーティング用のパス生成
export async function getStaticPaths() {
  return activities.map((activity: Activity) => ({
    params: { slug: activity.slug },
    props: { activity },
  }));
}

// Propsからactivityを取得
const { activity }: { activity: Activity } = Astro.props;

// 404チェック（念のため）
if (!activity) {
  return Astro.redirect('/404');
}

// 人気のアクティビティをフィルタリング
const popularActivities = activities.filter((activity) => activity.isPopular);

// 現在のアクティビティのギャラリー画像を最適化
const optimizedGallery = await Promise.all(
  activity.images.gallery.map(async (image) => {
    return await getImage({
      src: image,
      format: 'webp',
      widths: [580, 900, 1050],
    });
  }),
);

// 現在のアクティビティのポイント背景画像を最適化
const bgImage = await getImage({
  src: activity.images.pointBackground,
  format: 'webp',
  widths: [720, 1080, 2316],
});

// 人気アクティビティの画像最適化
const optimizedPopularActivities = await Promise.all(
  popularActivities.map(async (popularActivity) => {
    const optimizedImage = await getImage({
      src: popularActivity.images.thumbnail,
      format: 'webp',
      widths: [460, 480, 500],
    });
    return {
      ...popularActivity,
      optimizedThumbnail: optimizedImage,
    };
  }),
);
