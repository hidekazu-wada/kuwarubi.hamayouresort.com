                <a href={method.link}>{method.value}</a>
              </dd>
              <dd class="reservation__method-time">{method.hours}</dd>
            </div>
            {index < activity.reservation.length - 1 && (
              <span class="reservation__divider" />
            )}
          </>
        ))
      }
    </address>
  </section>

  <section class="popular-activities">
    <header class="popular-activities__header">
      <h2 class="popular-activities__title">人気のアクティビティ</h2>
    </header>

    <div class="popular-activities__slider activities-detail-popular__swiper">
      <div class="swiper-wrapper">
        {
          optimizedPopularActivities.map((popularActivity) => {
            // 各アクティビティの所要時間、対象年齢、実施時期をaboutデータから取得
            const durationData = popularActivity.about.find(
              (item) => item.term === '所要時間'
            );
            const ageData = popularActivity.about.find(
              (item) => item.term === '対象年齢'
            );
            const seasonData = popularActivity.about.find(
              (item) => item.term === '実施時期'
            );

            return (
              <div class="swiper-slide">
                <a
                  href={`/activities/${popularActivity.slug}`}
                  class="popular-activities__card-link"
                >
                  <article class="popular-activities__card">
                    <div class="popular-activities__card-image">
                      <picture class="popular-activities__picture">
                        <source
                          media="(min-width: 1024px)"
                          srcset={popularActivity.optimizedThumbnail.srcSet.toString()}
                        />
                        <source
                          media="(min-width: 744px)"
                          srcset={popularActivity.optimizedThumbnail.srcSet.toString()}
                        />
                        <img
                          src={popularActivity.optimizedThumbnail.src}
                          alt={`${popularActivity.title}の様子`}
                          class="popular-activities__img"
                        />
                      </picture>
