const pageDescription = 'ページの説明文をここに記述します。';

// ページ固有のクラス名（page-nameを適切な名前に変更）
const pageClass = 'main-content--food';
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  pageClass={pageClass}
>
  <Hero />
  <FoodNav />
  <section class="dinner">
    <article class="dinner__container">
      <div class="dinner__intro">
        <header class="dinner__header">
          <h2 class="dinner__title">
            山梨の豊かな自然が育んだ<br />
            季節感溢れる夕食
          </h2>
          <div class="dinner__label">
            <span class="dinner__label-line dinner__label-line--left"></span>
            <span class="dinner__label-text">夕食</span>
            <span class="dinner__label-line dinner__label-line--right"></span>
          </div>
          <p class="dinner__subtitle">DINNER</p>
        </header>
